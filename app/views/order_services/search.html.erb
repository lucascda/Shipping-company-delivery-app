<% if @order_service.present? %>
<h2>Detalhes do Pedido <%= @order_service.code %></h2>
  <div>
    <dt><%= OrderService.human_attribute_name(:order_status)%>:</dt>
    <dd><%= OrderService.human_attribute_name("order_status.#{@order_service.order_status}")%></dd>
    <dt><%= OrderService.human_attribute_name(:source_adress)%>:</dt>
    <dd><%= @order_service.source_adress %></dd>
    <dt><%= OrderService.human_attribute_name(:dest_adress)%>:</dt>
    <dd><%= @order_service.dest_adress %></dd>
    <dt><%= OrderService.human_attribute_name(:product_code)%>:</dt>
    <dd><%= @order_service.product_code %></dd>
    <dt><%= OrderService.human_attribute_name(:volume)%>:</dt>
    <dd><%= @order_service.volume %> m³</dd>
    <dt><%= OrderService.human_attribute_name(:weight)%>:</dt>
    <dd><%= @order_service.weight %> kg</dd>
    <dt><%= OrderService.human_attribute_name(:carrier_id)%>:</dt>
    <dd><%= @order_service.carrier.brand_name %></dd>
    <% if @order_service.vehicle.present? %>
      <dt><%= OrderService.human_attribute_name(:vehicle_id)%>:</dt>
      <dd><%= @order_service.vehicle.plate%> - <%= @order_service.vehicle.model %></dd>
    <% end %>    
  </div>
  <div>
    <h3>Atualizações de Rota</h3>
    <dl>
    <% @order_routes.each do | route |%>
      <dt>Coordenada Geográfica: </dt>
      <dd><%= route.coordinates%></dd>
      <dt>Data e Hora:</dt>
      <dd><%= I18n.localize(route.date) %> - <%= I18n.localize(route.time, format: :short_2) %><dd>      
    <% end %>
  </dl>
  </div>
<% else %>
  <p>Não foram encontrados resultados para essa busca</p>
<% end %>