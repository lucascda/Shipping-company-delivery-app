<!DOCTYPE html>
<html>
  <head>
    <title>ShippingApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application" %>
  </head>

  <body>
    <header>
    <%= link_to root_path do%>
      <h1>Sistema de Frete</h1>
    <% end %>
    
      <nav>
        <% if user_signed_in?%>
          Logado como: <%= current_user.email %>
          <%= button_to 'Sair', destroy_user_session_path, method: :delete %>
        <% elsif admin_signed_in? %>
          Logado como admin: <%= current_admin.email %>
          <%= button_to 'Sair', destroy_admin_session_path, method: :delete %>
        <% else%>
          <%= link_to 'Entrar', new_user_session_path %>
          <%= link_to 'Acesso Restrito', new_admin_session_path %>
        <% end %>
      </nav>
    </header>
    <main>
      <div>
        <%= notice %>
        <%= alert %>
      </div>
      <div>
        <%= yield %>
      </div>
    
    </main>
    
    
  </body>
</html>
